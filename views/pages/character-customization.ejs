<!doctype html>
<html lang="en">

    <head>
        <%- include('../partials/head'); %> 
    </head>

    <body class="text-center">
        
        <!-- Page Header and Image -->
        <h1>Customize Your Character</h1>
        <img id="characterDisplay" src="/images/square-blue.png" alt="Character Image">
        
        <!-- Name, Shape, and Color -->
        <form action="character-customization" method="POST">
            <div class="form-group">
                <label for="characterName" class="sr-only">Character Name</label>
                <input type="text" class="form-control" name="charName" id="characterName" placeholder="Display Name">
            </div>
            <div class="form-group">
                <label for="characterShape" class="sr-only">Character Shape</label>
                <select class="form-control" name="charShape"id="characterShape">
                    <option value="none">Select Shape</option>
                    <option value="square">Square</option>
                    <option value="circle">Circle</option>
                    <option value="triangle">Triangle</option>
                </select>
            </div>
            <div class="form-group">
                <label for="characterColor" class="sr-only">Character Color</label>
                <select class="form-control" name="charColor" id="characterColor">
                    <option value="none">Select Color</option>
                    <option value="red">Red</option>
                    <option value="green">Green</option>
                    <option value="blue">Blue</option>
                </select>
            </div>
            <button class="btn btn-secondary btn-lg" type="submit" >Let's Go</button>
        </form>

        <%- include('../partials/not-signed-in-nav-and-scripts'); %>

    </body>

</html>
